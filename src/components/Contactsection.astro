<!-- Tu sección de contacto en Astro -->
<section id="contact" class="relative py-20 md:py-[120px]">
  <div class="absolute top-0 left-0 -z-[1] w-full dark:bg-dark h-full"></div>
  <div class="absolute top-0 left-0 -z-[1] h-1/2 w-full bg-[#E9F9FF] dark:bg-dark-700 lg:h-[45%] xl:h-1/2"></div>
  <div class="container px-4">
    <div class="-mx-4 flex flex-wrap items-center">
      <div class="w-full px-4 lg:w-7/12 xl:w-8/12">
        <!-- Título y dirección -->
        <div class="ud-contact-content-wrapper">
          <div class="ud-contact-title mb-12 lg:mb-[150px]">
            <span class="mb-6 block text-base font-medium text-dark dark:text-white">CONTACTANOS</span>
            <h2 class="max-w-[260px] text-[35px] leading-[1.14] font-semibold text-dark dark:text-white">
              Tienes alguna duda? Contáctanos.
            </h2>
          </div>
          <div class="mb-12 flex flex-wrap justify-between lg:mb-0">
            <!-- Dirección -->
            <div class="mb-8 flex w-[330px] max-w-full">
              <div class="mr-6 text-[32px] text-primary">
                <!-- Ícono ubicación -->
              </div>
              <div>
                <h5 class="mb-[18px] text-lg font-semibold text-dark dark:text-white">Ubicados en</h5>
                <p class="text-base text-body-color dark:text-dark-6">
                 El Salvado, San Miguel, Casa matriz - Residencial Villa Panamerica, Poligono 34, Casa 24.
                </p>
              </div>
            </div>
            <!-- Correo -->
            <div class="mb-8 flex w-[330px] max-w-full">
              <div class="mr-6 text-[32px] text-primary">
                <!-- Ícono email -->
              </div>
              <div>
                <h5 class="mb-[18px] text-lg font-semibold text-dark dark:text-white">Nuestro correo</h5>
                <p class="text-base text-body-color dark:text-dark-6">info@easyfact.com.sv</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulario -->
      <div class="w-full px-4 lg:w-5/12 xl:w-4/12">
        <div
          class="wow fadeInUp rounded-lg bg-white dark:bg-dark-2 py-10 px-8 shadow-testimonial dark:shadow-none sm:py-12 sm:px-10 md:p-[60px] lg:p-10 lg:py-12 lg:px-10 2xl:p-[60px]"
          data-wow-delay=".2s"
        >
          <h3 class="mb-8 text-2xl font-semibold md:text-[28px] md:leading-[1.42] text-dark dark:text-white">
            Envíanos un mensaje
          </h3>
          <form>
            <div class="mb-[22px]">
              <label for="fullName" class="block text-sm text-body-color dark:text-dark-6 mb-4">Nombre*</label>
              <input type="text" name="fullName" placeholder="Salvador Perez"
                class="bg-transparent w-full text-body-color dark:text-dark-6 placeholder:text-body-color/60 border-0 border-b border-[#f1f1f1] dark:border-dark-3 pb-3 focus:border-primary focus:outline-none" />
            </div>
        
            <div class="mb-[22px]">
              <label for="text" class="block text-sm text-body-color dark:text-dark-6 mb-4">Empresa*</label>
              <input type="text" name="text" placeholder="Mi empresa"
                class="bg-transparent w-full text-body-color dark:text-dark-6 placeholder:text-body-color/60 border-0 border-b border-[#f1f1f1] dark:border-dark-3 pb-3 focus:border-primary focus:outline-none" />
            </div>
            <div class="mb-[30px]">
              <label for="text" class="block text-sm text-body-color dark:text-dark-6 mb-4">Documentos emitidos por mes*</label>
              <textarea name="message" rows="1" placeholder="+100 Aprox"
                class="bg-transparent w-full text-body-color dark:text-dark-6 placeholder:text-body-color/60 resize-none border-0 border-b border-[#f1f1f1] dark:border-dark-3 pb-3 focus:border-primary focus:outline-none"></textarea>
            </div>
            <div class="mb-0">
              <button type="button" onclick="enviarPorWhatsApp()"
                class="inline-flex items-center justify-center rounded-md bg-primary py-3 px-10 text-base font-medium text-white transition duration-300 ease-in-out hover:bg-blue-dark">
                Enviar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Script para Astro (solo cliente) -->
<script is:browser>
  function enviarPorWhatsApp() {
    const nombre = document.querySelector('input[name="fullName"]').value.trim();
    const empresa = document.querySelector('input[name="text"]').value.trim();
    const documentos = document.querySelector('textarea[name="message"]').value.trim();

    if (!nombre || !empresa || !documentos) {
      alert("Por favor completa todos los campos antes de enviar.");
      return;
    }

    const mensaje = `Hola, mi nombre es: ${nombre}.%0AMi empresa es: ${empresa}.%0AEl número de documentos aproximados que emitimos es: ${documentos}.%0AY quisiera saber cómo EasyFact me puede ayudar con mi facturación.`;
    const url = `https://api.whatsapp.com/send/?phone=50378653368&text=${mensaje}&type=phone_number&app_absent=0`;

    window.open(url, '_blank');
  }
</script>

